# hw definition file for processing by chibios_pins.py
# for BrainFPV RADIX 2 HD

# MCU class and specific type
MCU STM32H7xx STM32H750xx

# board ID for firmware load
APJ_BOARD_ID 1025

# crystal frequency, setup to use external oscillator
OSCILLATOR_HZ 16000000

FLASH_SIZE_KB 2048
FLASH_BASE_ADDRESS 0x90400000

# Do not reserve any flash space
FLASH_RESERVE_START_KB 0
FLASH_RESERVE_END_KB 0

define HAL_STORAGE_SIZE 16384

# only one I2C bus
I2C_ORDER I2C1

# order of UARTs (and USB)
SERIAL_ORDER OTG1 USART1 USART2 USART3 UART4 UART5 USART6 EMPTY

# I2C1 for baro
PB8 I2C1_SCL I2C1 PULLUP
PB9 I2C1_SDA I2C1 PULLUP

# Analog inputs
PA6 BATT_VOLTAGE_SENS ADC1 SCALE(1)
PB0 BATT_CURRENT_SENS ADC1 SCALE(1)
PC0 RSSI_ADC ADC1

# Debug
PA13 JTMS-SWDIO SWD
PA14 JTCK-SWCLK SWD

# USB
PA11 OTG_FS_DM OTG1
PA12 OTG_FS_DP OTG1

# USART1
PA10 USART1_RX USART1
PB14 USART1_TX USART1

# USART2
PD6 USART2_RX USART2
PD5 USART2_TX USART2

# USART3
PB11 USART3_RX USART3
PD8 USART3_TX USART3

# UART4
PD0 UART4_RX UART4
PD1 UART4_TX UART4

# UART5
PD2 UART5_RX UART5
PB6 UART5_TX UART5

# USART6
PC7 USART6_RX USART6
PC6 USART6_TX USART6

# printf on USART2
STDOUT_SERIAL SD2
STDOUT_BAUDRATE 1000000

# LEDs
PA0 LED_R1 OUTPUT HIGH OPENDRAIN GPIO(0)
PA2 LED_G1 OUTPUT HIGH OPENDRAIN GPIO(1)
PA3 LED_B1 OUTPUT HIGH OPENDRAIN GPIO(2)

undef HAL_GPIO_A_LED_PIN
undef HAL_GPIO_B_LED_PIN

define HAL_GPIO_A_LED_PIN 0
define HAL_GPIO_B_LED_PIN 1
define HAL_GPIO_C_LED_PIN 2

define HAL_GPIO_LED_ON  0
define HAL_GPIO_LED_OFF 1

define HAL_HAVE_PIXRACER_LED

# SP1 for MicroSD card
PA5 SPI1_SCK SPI1
PB4 SPI1_MISO SPI1
PD7 SPI1_MOSI SPI1
PE14 SDCARD_CS CS

SPIDEV sdcard SPI1 DEVID1 SDCARD_CS MODE0 400*KHZ 25*MHZ

# filesystem setup on sdcard
define HAL_OS_FATFS_IO 1
define HAL_BOARD_LOG_DIRECTORY "/APM/LOGS"
define HAL_BOARD_TERRAIN_DIRECTORY "/APM/TERRAIN"

# QuadSPI Flash
PD11 QUADSPI_BK1_IO0 QUADSPI1 SPEED_HIGH
PC10 QUADSPI_BK1_IO1 QUADSPI1 SPEED_HIGH
PE2 QUADSPI_BK1_IO2 QUADSPI1 SPEED_HIGH
PA1 QUADSPI_BK1_IO3 QUADSPI1 SPEED_HIGH
PB10 QUADSPI_BK1_NCS QUADSPI1 SPEED_HIGH
PB2 QUADSPI_CLK QUADSPI1 SPEED_HIGH

# no built-in compass and no external I2C so no compass
define ALLOW_ARM_NO_COMPASS
define HAL_COMPASS_DEFAULT HAL_COMPASS_NONE
define HAL_I2C_INTERNAL_MASK 0

